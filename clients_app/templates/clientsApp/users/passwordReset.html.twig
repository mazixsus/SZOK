{% extends 'clientsApp/clientBase.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/error_messages.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/form_invalid_func.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-md-9 ">
            <div class="h2 mb-4 font-weight-normal">Resetowanie has≈Ça:</div>
            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Podany login lub email nie istnieje.
                </div>
            {% endif %}
            {{ form_start(form) }}

            <div class="mx-3">
                <div class="form-group row">
                    {{ form_label(form.login) }}
                    <div class="col-sm-10 px-0">
                        {% if form.login.vars.errors|length > 0 %}
                            {{ form_widget(form.login, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.login) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.login) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.email) }}
                    <div class="col-sm-10 px-0">
                        {% if form.email.vars.errors|length > 0 %}
                            {{ form_widget(form.email, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.email) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                </div>
                <div class="pull-right" style="margin-right: -15px">
                    {{ form_widget(form.save) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}