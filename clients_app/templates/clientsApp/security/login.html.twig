{% extends 'clientsApp/clientBase.html.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-md-9 ">
            <div class="h2 mb-4 font-weight-normal">Logowanie:</div>
            <form method="post" class="mx-3">
                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="form-group row">
                    <label for="inputUsername" class="col-sm-2 col-form-label">Login: </label>
                    <div class="col-sm-10">
                        <input type="text" value="" name="username" id="inputUsername"
                               class="form-control" placeholder="Wprowadź login..." required autofocus>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Hasło: </label>
                    <div class="col-sm-10">
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               placeholder="Wprowadź hasło..." required>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-primary float-right" type="submit">
                    Zaloguj się
                </button>
            </form>
            <a class="btn btn-primary float-right mr-1" href="{{ path('clients_app/password_reset') }}">Zapomniałem hasła</a>
        </div>
    </div>
{% endblock %}
