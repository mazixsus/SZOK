{% extends 'workersApp/workerBase.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/error_messages.css') }}">
    <link rel="stylesheet" href="{{ asset('css/checkboxes.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/form_invalid_func.js') }}"></script>
    <script src="{{ asset('js/sale_report_func.js') }}"></script>
{% endblock %}
{% block content %}
    <div class="pb-4 mt-0">
        <div class="h1 pb-3">Raport sprzeda≈ºy</div>
        <div class="mx-3">
            <div class="mx-3">
                {{ form_start(form) }}
                <div class="form-group row">
                    <label class="col-sm-2">{{ form_label(form.from) }}</label>
                    <div class="col-sm-10">
                        {% if form.from.vars.errors|length > 0 %}
                            {{ form_widget(form.from, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.from) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.from) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">{{ form_label(form.to) }}</label>
                    <div class="col-sm-10">
                        {% if form.to.vars.errors|length > 0 or error %}
                            {{ form_widget(form.to, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.to) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.to) }}
                            <ul>
                                <li>
                                    {{ error }}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">{{ form_label(form.where) }}</label>
                    <div class="col-sm-10">
                        {% if form.where.vars.errors|length > 0 %}
                            {{ form_widget(form.where, {'attr': {'class': 'is-invalid'}}) }}
                        {% else %}
                            {{ form_widget(form.where) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.where) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">{{ form_label(form.employee) }}</label>
                    <div class="col-sm-10">
                        {% if form.employee.vars.errors|length > 0%}
                            {{ form_widget(form.employee, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.employee) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.employee) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">{{ form_label(form.payment) }}</label>
                    <div class="col-sm-10">
                        {% if form.payment.vars.errors|length > 0%}
                            {{ form_widget(form.payment, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.payment) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.payment) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">{{ form_label(form.movie) }}</label>
                    <div class="col-sm-10">
                        {% if form.movie.vars.errors|length > 0%}
                            {{ form_widget(form.movie, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.movie) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.movie) }}
                        </div>
                    </div>
                </div>
                {{ form_widget(form.submit) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}