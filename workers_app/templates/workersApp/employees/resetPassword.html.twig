{% extends 'workersApp/workerBase.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/error_messages.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/form_invalid_func.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="pb-4 mt-0">
        <div class="h1 pb-3">Resetowanie has≈Ça</div>
        {{ form_start(form) }}
        <div class="mx-3">
            <div class="mx-3">
                <div class="form-group row">
                    {{ form_label(form.haslo) }}
                    <div class="col-sm-10 px-0">
                        {% if form.haslo.vars.errors|length > 0 %}
                            {{ form_widget(form.haslo, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.haslo) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.haslo) }}
                        </div>
                    </div>
                </div>
                {{ form_widget(form.save) }}
                {{ form_end(form) }}
                <div class="row">
                    <a class="btn btn-secondary" href="{{ path('workers_app/employees/show',{"id":id}) }}"
                       role="button">Anuluj</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
