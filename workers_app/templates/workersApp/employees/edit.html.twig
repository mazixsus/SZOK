{% extends 'workersApp/workerBase.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/error_messages.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/form_invalid_func.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="pb-4 mt-0">
    <div class="h1 pb-3">Edycja pracownika</div>
    {{ form_start(form) }}
    <div class="mx-3">
        <div class="mx-3">
            {% if id != app.user.id %}
                {{ form_start(form) }}
                <div class="form-group row">
                    {{ form_label(form.role) }}
                    <div class="col-sm-10 px-0">
                        {{ form_widget(form.role) }}
                    </div>
                </div>
            {% else %}

                <div class="row mb-3">
                    <div class="col-sm-2">
                        Rola:
                    </div>
                    <div class="col-sm-10 pl-sm-2">
                        {{ app.user.role }}
                    </div>
                </div>

                {{ form_start(form) }}
            {% endif %}
            <div class="form-group row">
                {{ form_label(form.login) }}
                <div class="col-sm-10 px-0">
                    {% if form.login.vars.errors|length > 0 %}
                        {{ form_widget(form.login, {'attr': {'class': 'is-invalid form-control'}}) }}
                    {% else %}
                        {{ form_widget(form.login) }}
                    {% endif %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.login) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.imie) }}
                <div class="col-sm-10 px-0">
                    {% if form.imie.vars.errors|length > 0 %}
                        {{ form_widget(form.imie, {'attr': {'class': 'is-invalid form-control'}}) }}
                    {% else %}
                        {{ form_widget(form.imie) }}
                    {% endif %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.imie) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.nazwisko) }}
                <div class="col-sm-10 px-0">
                    {% if form.nazwisko.vars.errors|length > 0 %}
                        {{ form_widget(form.nazwisko, {'attr': {'class': 'is-invalid form-control'}}) }}
                    {% else %}
                        {{ form_widget(form.nazwisko) }}
                    {% endif %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.nazwisko) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.email) }}
                <div class="col-sm-10 px-0">
                    {% if form.email.vars.errors|length > 0 %}
                        {{ form_widget(form.email, {'attr': {'class': 'is-invalid form-control'}}) }}
                    {% else %}
                        {{ form_widget(form.email) }}
                    {% endif %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.telefon) }}
                <div class="col-sm-10 px-0">
                    {% if form.telefon.vars.errors|length > 0 %}
                        {{ form_widget(form.telefon, {'attr': {'class': 'is-invalid form-control'}}) }}
                    {% else %}
                        {{ form_widget(form.telefon) }}
                    {% endif %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.telefon) }}
                    </div>
                </div>
            </div>
            <div class="px-0 pull-right">
                {{ form_widget(form.save) }}
            </div>
            {{ form_end(form) }}
            <a class="btn btn-secondary" href="{{ path('workers_app/employees/show',{"id":id}) }}">Anuluj</a>
        </div>
    </div>
{% endblock %}