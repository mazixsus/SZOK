{% extends 'workersApp/workerBase.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/error_messages.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/form_invalid_func.js') }}"></script>
{% endblock %}
{% block content %}
    <div class="pb-4 mt-0">
        <div class="h1 pb-3">Generowanie voucherów</div>
        {{ form_start(form) }}
        <div class="mx-3">
            <div class="mx-3">
                <div class="form-group row">
                    {{ form_label(form.number) }}
                    <div class="col-sm-10 px-0">
                        {% if form.number.vars.errors|length > 0 or errors.number %}
                            {{ form_widget(form.number, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.number) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.number) }}
                            {% if errors.number %}
                                <ul>
                                    <li>{{ errors.number }}</li>
                                </ul>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.isMoney) }}
                    {{ form_widget(form.isMoney) }}
                </div>
                <div class="form-group row">
                    {{ form_label(form.value) }}
                    <div class="col-sm-10 px-0">
                        <div class="input-group">
                            {% if form.value.vars.errors|length > 0 or errors.value %}
                                {{ form_widget(form.value, {'attr': {'class': 'is-invalid form-control'}}) }}
                            {% else %}
                                {{ form_widget(form.value) }}
                            {% endif %}
                            <div class="input-group-append">
                                <div class="input-group-text">zł / %</div>
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(form.value) }}
                                {% if errors.value %}
                                    <ul>
                                        <li>{{ errors.value }}</li>
                                    </ul>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.start) }}
                    <div class="col-sm-10 px-0">
                        {% if form.start.vars.errors|length > 0 or errors.start %}
                            {{ form_widget(form.start, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.start) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.start) }}
                            {% if errors.start %}
                                <ul>
                                    <li>{{ errors.start }}</li>
                                </ul>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="form-group row">

                    {{ form_label(form.end) }}
                    <div class="col-sm-10 px-0">
                        {% if form.end.vars.errors|length > 0 or errors.end %}
                            {{ form_widget(form.end, {'attr': {'class': 'is-invalid form-control'}}) }}
                        {% else %}
                            {{ form_widget(form.end) }}
                        {% endif %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.end) }}
                            {% if errors.end %}
                                <ul>
                                    <li>{{ errors.end }}</li>
                                </ul>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <a href="{{ path('workers_app/vouchers') }}" class="btn btn-secondary">Anuluj</a>
            <div class="pull-right">
                {{ form_widget(form.submit) }}
            </div>
        </div>
    {{ form_end(form) }}
    </div>


{% endblock %}